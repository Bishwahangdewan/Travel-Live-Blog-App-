        <th class="table__head">Edit Post</th>
        <th class="table__head">Delete Post</th>
        <th class="table__head">View Post</th>
      </tr>

      {{#posts}}
        <tr class="table__body__row">
          <td class="table__body">{{title}}</td>
          <td class="table__body">27 August 2022</td>
          <td class="table__body">
            <a href="/admin/editPost/{{_id}}" class="admin__edit__btn">Edit</a>
          </td>
          <td class="table__body">
            <form method="POST" action="/admin/deletePost/{{_id}}?_method=DELETE">
              <input type="submit" value="Delete"  class="admin__delete__btn" />
            </form>
          </td>
          <td class="table__body">
            <a href="#" class="admin__view__btn">View</a>
          </td>
        </tr>
      {{/posts}}

