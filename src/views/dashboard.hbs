{{> navbar }}

  <div class="dashboard__container">
    {{#each message}}
      <div class="msg msg-success">
        <p>{{this}}</p>
      </div>
    {{/each}}

    <h3 class="h3 py-30">Manage your Blog Posts</h3>

    <table class="table__container">
      <tr class="table__head__row">
        <th class="table__head">Title</th>
